    <developers>
        <developer>
            <name>Hatem Morgan</name>
            <email>hatemmorgan17@gmail.com</email>
            <organization>SWVL</organization>
            <organizationUrl>https://swvl.com/</organizationUrl>
        </developer>
    </developers>

    <dependencies>
        <!-- Unit tests -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>